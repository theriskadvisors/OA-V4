
@{
    ViewBag.Title = "Inventory";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

@*<h2>Inventory</h2>*@


<style>
    #datatable_filter {
        display: block !important;
    }

    #datatable1_filter {
        display: block !important;
    }

    #datatable2_filter {
        display: block !important;
    }

    a:hover {
        text-decoration: underline;
        color: #053f89 !important;
    }
</style>

<div class="card">
    <div class="card-body p-4">

        <div class="box box-primary">
            <div class="box-title"></div>
            <div class="box-body">




                <table style="width:100%" class="table hover table-striped table-bordered" id="datatable1">
                    <thead>

                        <tr>
                            <th>Product No</th>
                            <th>
                                Name
                            </th>
                            <th>
                                Unit Name
                            </th>
                            <th>
                               Category
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Unit Sale Price
                            </th>
                            @*<th>
            Unit Purchase Price
        </th>*@
                            <th>
                                Quantity On Hand
                            </th>

                            @*<th>
            Average Cost
        </th>
        <th>
            Total Cost
        </th>*@

                            <th style="width:50px !important;">
                                Actions
                            </th>


                            @*<th></th>*@
                        </tr>
                    </thead>

                    <tbody id="ExternalProduct">
                    </tbody>


                </table>

            </div>
        </div>
    </div>

</div>

<script>


    $(document).ready(function () {




        $(".CreateInventory").click(function () {


        })

        $("#PageHeader").html("Inventory");


       




        var table1 = $('#datatable1').dataTable({


            buttons: [
                //{
                //    text: '<span class="datatableButtonsEdit"> <img src="/Content/assets/assets/icons/Icon-edit.png" alt=""> View Stocks Details</span>',
                //    action: function (e, dt, button, config) {
                //        window.location.href = "/Inventory/ViewStockDeatils";
                //    }
                //},

                {
                    text: '<span class="datatableButtonsEdit"> <img src="/Content/assets/assets/icons/Icon-edit.png" alt=""> Create</span>',
                    action: function (e, dt, button, config) {
                        window.location.href = "/Inventory/Create?InventoryType=" + "ExternalProduct";
                    }
                },
                {
                    text: '<span class="datatableButtonsEdit"> <img src="/Content/assets/assets/icons/Icon-edit.png" alt=""> Add Stocks</span>',
                    action: function (e, dt, button, config) {
                        window.location.href = "/Inventory/AddStockPurchase";
                    }
                },
                {
                    text: '<span class="datatableButtonsDownload"> <img src="/Content/assets/assets/icons/print.png" width="20" alt=""> Print</span>',
                     action: function (e, dt, button, config) {
                        window.location.href = "/Inventory/PrintAllInventoryByCategory";
                    }
                }
            ],
            "language": {
                "lengthMenu": "<div class=\"d-flex showEntriesCon\">\n" +
                    "  <div class=\"p-2\">Show </div> <div class=\"showEntries\"> _MENU_\n" +
                    "  </div>\n" +
                    "  </div>",
                "info": "<div class='showingEntriesOfTotal'>Showing <span class=\"text-info\">_START_ to _END_</span> of _TOTAL_ entries</div>",
                "paginate": {
                    "first": "Firstt",
                    "last": "Lastt",
                    "next": ' <img src="~/Content/assets/assets/icons/Arrow2.png" alt=""> ',
                    "previous": ' <img src="~/Content/assets/assets/icons/Arrow1.png" alt=""> '
                }
            },
            "searching": true,
            // dom: '<"class">Blfrtip',
            dom: "<'row mb-3'<'col-sm-12 col-md-2 col-lg-2'l><'col-sm-12 col-md-10 col-lg-10 datatableButtonsCon text-right'Bf>>" +
                "<'row'<'col-sm-12 datatablesData'tr>>" +
                "<'row mt-4'<'col-sm-12 col-md-4 col-lg-6 infoCon'i><'col-sm-12 col-md-8 col-lg-6 pagCon'p>>",
        });

    



      

        $.ajax({
            type: "POST",
            url: "/Inventory/GetExternalProducts",
            //pending Orders tab
            data: {},
            success: function (data) {
                table1.fnClearTable();
                $.each(data, function (index) {

                    table1.fnAddData([data[index].ItemNo + "<input  type=hidden value=" + data[index].Id + ">", data[index].Name, data[index].UnitName, data[index].Category, data[index].Description, data[index].UnitSalePrice, data[index].QuantityOnHand, "<input onclick='ViewInventoryItemDetails(" + data[index].Id + ")' style='color:white !important'  class='btn btn-sm btn-primary' type ='button'  value ='View Details' />"]);

                });
                table1.fnDraw();

                var AllTds = $("td:nth-child(6),td:nth-child(7)");

                for (var i = 0; i < AllTds.length; i++) {

                    var CommaSeparatedValue = numberWithCommas(AllTds[i].innerHTML);

                    AllTds[i].innerHTML = CommaSeparatedValue;
                }


            }
        });
      

        $("tr td:nth-child(7)").css('width', '200px');


        $('#datatable1').on('click', 'tbody tr td:nth-child(1),td:nth-child(2),td:nth-child(3),td:nth-child(4),td:nth-child(5),td:nth-child(6),td:nth-child(7)', function () {
            var td = $(this).parent().children("td");
            var InventoryID = $(td[0]).children("input").val();


            var Id = parseInt(InventoryID);

            // alert(Id);
            window.location.href = "/Inventory/Edit?id=" + Id;
        });
       


    }) //end  of document ready

    function ViewInventoryItemDetails(InventoryId) {

        // alert("fun");

        window.location.href = "/Inventory/InventoryProductDetails?InventoryId=" + InventoryId;
    }

    function ViewInventoryProductionDetails(InventoryId) {

        window.location.href = "/Inventory/InventoryProductionDetails?InventoryId=" + InventoryId;

    }


    window.onload = function () {

        debugger

    }// end of window.onload

    function numberWithCommas(x) {
        debugger
        return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
    }
</script>






