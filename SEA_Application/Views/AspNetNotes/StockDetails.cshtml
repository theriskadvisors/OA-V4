<script>


    $(document).ready(function () {




        $("#PageHeader").html("Notes Stock Summary");


        $('#datatable1 tfoot th').each(function () {
            var title = $(this).text();
            $(this).html('<input type="text" class="round-border" style="border-color:#053f89; border-radius:5px; width:100%" placeholder="Search" />');
        });


        var table1 = $('#datatable1').dataTable({
            buttons: [],

            initComplete: function () {
                // Apply the search
                this.api().columns().every(function () {
                    var that = this;

                    $('input', this.footer()).on('keyup change clear', function () {
                        if (that.search() !== this.value) {
                            that
                                .search(this.value)
                                .draw();
                        }
                    });
                });
            },
            'columnDefs': [

                {
                    "targets": 1,
                    "className": "text-center",
                },

                {
                    "targets": 4,
                    "className": "text-center",
                },

                {
                    "targets": 5,
                    "className": "text-center",
                }
            ],
            order: [[0, 'desc']],
            


          
            "language": {
                "lengthMenu": "<div class=\"d-flex showEntriesCon\">\n" +
                    "  <div class=\"p-2\">Show </div> <div class=\"showEntries\"> _MENU_\n" +
                    "  </div>\n" +
                    "  </div>",
                "info": "<div class='showingEntriesOfTotal'>Showing <span class=\"text-info\">_START_ to _END_</span> of _TOTAL_ entries</div>",
                "paginate": {
                    "first": "Firstt",
                    "last": "Lastt",
                    "next": ' <img src="~/Content/assets/assets/icons/Arrow2.png" alt=""> ',
                    "previous": ' <img src="~/Content/assets/assets/icons/Arrow1.png" alt=""> '
                }
            },
            "searching": true,
            // dom: '<"class">Blfrtip',
            dom: "<'row mb-3'<'col-sm-12 col-md-2 col-lg-2'l><'col-sm-12 col-md-10 col-lg-10 datatableButtonsCon text-right'Bf>>" +
                "<'row'<'col-sm-12 datatablesData'tr>>" +
                "<'row mt-4'<'col-sm-12 col-md-4 col-lg-6 infoCon'i><'col-sm-12 col-md-8 col-lg-6 pagCon'p>>",
        });


        $("#datatable_filter").hide();

        $('#datatable1 tfoot tr').appendTo('#datatable1 thead');

        $.ajax({
            type: "POST",
            url: "/AspnetNotes/GetNotesStockDetails",
            //pending Orders tab
            data: {},
            success: function (data) {
                table1.fnClearTable();
                $.each(data, function (index) {

                    var value = new Date(parseInt(data[index].Date.replace(/(^.*\()|([+-].*$)/g, '')));
                    var dat = value.getMonth() +
                        1 +
                        "/" +
                        value.getDate() +
                        "/" +
                        value.getFullYear();



                    table1.fnAddData([data[index].Id ,data[index].NotesNo, data[index].Name, data[index].Description, data[index].Quantity, dat]);

                });



                table1.fnDraw();

                $("#datatable1 tr td:first-child").hide();

            }
        });


        //$("tr td:nth-child(7)").css('width', '200px');


        //$('#datatable1').on('click', 'tbody tr td:nth-child(1),td:nth-child(2),td:nth-child(3),td:nth-child(4),td:nth-child(5),td:nth-child(6),td:nth-child(7)', function () {
