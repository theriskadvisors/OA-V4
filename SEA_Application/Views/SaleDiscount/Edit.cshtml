@model SEA_Application.Models.SaleDiscount
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_CashierDashboardLayout.cshtml";
}
<style>
    input[type='checkbox'] {
        width: 30px;
        height: 18px;
        margin-top: 20px;
        padding-top: 10px;
        cursor: pointer;
    }
</style>

<div class="card">
    <div class="card-body p-4">



        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            <div class="col-md-6">

                <input type="hidden" name="Id" value="@Model.Id" />
                <input type="hidden" name="IsActiveHidden" id="IsActiveHidden" value="@Model.IsActive" />

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })

                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = true } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-12">

                        <label class="control-label">Description</label>
                        <textarea class="form-control" name="description" id="description" rows="5">@Model.Description</textarea>

                    </div>
                </div>


                <div class="form-group">
                    <div class="col-md-12">

                        <label class="control-label">Percentage %</label>

                        @*@Html.EditorFor(model => model.UnitSalePrice, new { htmlAttributes = new { @value = "0", type = "number", min = "0", @class = "form-control", @required = true } })*@


                        <input type="number" value ="@Model.Percentage" id="percentage" name="percentage"  min="0" class="form-control" required />

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-12">

                        <label class="control-label">Is Active </label>

                        @*@Html.EditorFor(model => model.UnitSalePrice, new { htmlAttributes = new { @value = "0", type = "number", min = "0", @class = "form-control", @required = true } })*@


                        <input type="checkbox"  id="isactive" name="IsActive" />

                    </div>
                </div>

                <br />

                <div class="form-group">
                    <div class="col-md-12">
                        <button tabindex="99" type="submit" id="SaveButton" class="btn btn-primary rounded rounded-lg"> Save </button>

                        <button tabindex="100" type="button" id="btnCancel" class="btn btn-primary rounded rounded-lg bg-transparent text-muted shadow-none mr-3">
                            <i class="material-icons mr-2">cached</i>  Cancel
                        </button>

                    </div>
                </div>
            </div>


        }


    </div>
</div>
<script>


    $(document).ready(function () {

        $("#PageHeader").html("Edit");

        var IsActiveHidden = $("#IsActiveHidden").val();

        if (IsActiveHidden == "value") {

            
            $("#isactive").prop('checked', true);
        }
        
       
        })

</script>