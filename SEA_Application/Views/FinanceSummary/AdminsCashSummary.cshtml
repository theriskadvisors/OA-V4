@model IEnumerable<SEA_Application.Controllers.FinanceSummaryController.CashSummary>
@{
    ViewBag.Title = "AdminsCashSummary";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}



<div class="card">
    <div class="card-body p-4">

        <div class="table-responsive">
            <table id="datatable" border="1" class="table hover table-striped table-bordered" width="100%">
                <thead>
                    <tr>


                        <th>Name</th>
                        <th>Fee Received</th>
                        <th>Notes Amount</th>
                        <th>Total Amount</th>
                    </tr>


                </thead>

                <tbody id="TableBody">

                    @foreach (var item in Model)
                    {

                        <tr>

                            <td>@item.UserName</td>
                            <td>@item.FeeReceived</td>
                            <td>@item.NotesAmount</td>
                            <td>@item.TotalAmount</td>

                        </tr>
                    }


                </tbody>


            </table>
        </div>

    </div>
    </div>



